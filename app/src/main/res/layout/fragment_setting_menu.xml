<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="layout.SettingMenuFragment">

    <!-- Communication Settings -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Server Ip Address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/serverIpAddressTextView"
                    android:layout_weight="3"
                    android:gravity="center_vertical"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="192.168.0.77"
                    android:ems="10"
                    android:id="@+id/serverIpAddressEditText"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Server TCP Port"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/serverTcpPortTextView"
                    android:layout_weight="3"
                    android:gravity="center_vertical"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="5010"
                    android:ems="10"
                    android:id="@+id/serverTcpPortEditText"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="UDP Listen Port"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/udpListenPortTextView"
                    android:layout_weight="3"
                    android:gravity="center_vertical"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="5005"
                    android:ems="10"
                    android:id="@+id/udpListenPortEditText"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/passwordTextView"
                    android:layout_weight="3"
                    android:gravity="center_vertical"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:text="1234"
                    android:ems="10"
                    android:id="@+id/passwordEditText"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
